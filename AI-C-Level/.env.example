# ===========================================
# Boardroom Bridge - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control
# ===========================================

# ===========================================
# Supabase (Required)
# ===========================================
# Get these from: Supabase Dashboard → Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# Service role key - only needed for admin operations
# Keep this secret! Never expose in client-side code
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ===========================================
# Anthropic AI (Required)
# ===========================================
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your_key_here

# ===========================================
# App Configuration
# ===========================================
# Your production URL (no trailing slash)
NEXT_PUBLIC_APP_URL=https://boardroombridge.com

# NextAuth configuration (if using NextAuth for auth)
NEXTAUTH_URL=https://boardroombridge.com
NEXTAUTH_SECRET=generate_a_32_character_secret_here

# ===========================================
# Stripe Payments (Required for monetization)
# ===========================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_your_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_key_here

# Webhook secret for Stripe events
# Get from: Stripe Dashboard → Webhooks → Signing secret
STRIPE_WEBHOOK_SECRET=whsec_your_secret_here

# Stripe Price IDs for subscription tiers
# Create these in Stripe Dashboard → Products
STRIPE_PRICE_STARTER=price_starter_id_here
STRIPE_PRICE_PROFESSIONAL=price_professional_id_here
STRIPE_PRICE_ENTERPRISE=price_enterprise_id_here

# ===========================================
# Monitoring & Analytics (Optional)
# ===========================================
# Sentry for error tracking
# Get from: https://sentry.io/
SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# PostHog for product analytics
# Get from: https://posthog.com/
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ===========================================
# Feature Flags (Optional)
# ===========================================
# Enable/disable features
NEXT_PUBLIC_ENABLE_PAYMENTS=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_MAINTENANCE_MODE=false

# ===========================================
# Rate Limiting (Optional)
# ===========================================
# Upstash Redis for rate limiting
# Get from: https://upstash.com/
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ===========================================
# Email (Optional - for notifications)
# ===========================================
# Resend for transactional emails
# Get from: https://resend.com/
RESEND_API_KEY=
EMAIL_FROM=noreply@boardroombridge.com
