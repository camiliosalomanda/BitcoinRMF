# ===========================================
# Bitcoin RMF - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control
# ===========================================

# ===========================================
# Supabase (Required for persistence)
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ===========================================
# Anthropic AI (Required for AI analysis)
# ===========================================
ANTHROPIC_API_KEY=sk-ant-your_key_here

# ===========================================
# App Configuration
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate_a_32_character_secret_here

# ===========================================
# X (Twitter) OAuth 2.0
# ===========================================
AUTH_TWITTER_ID=your_twitter_client_id_here
AUTH_TWITTER_SECRET=your_twitter_client_secret_here

# ===========================================
# Admin Configuration
# ===========================================
ADMIN_X_IDS=comma,separated,x_user_ids

# ===========================================
# Feature Flags
# ===========================================
NEXT_PUBLIC_ENABLE_AI_ANALYSIS=true
